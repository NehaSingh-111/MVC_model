<!doctype html>
<html lang="en">
<head>
  <title><%= employee ? "Edit Employee" : "Add Employee" %></title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <header class="bg-dark text-white text-center py-3">
    <h2><%= employee ? "Edit Employee" : "Add Employee" %></h2>
  </header>

  <main class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-body">
            <form method="POST" action="/save">
              <% if (employee) { %>
                <input type="hidden" name="id" value="<%= employee._id %>" />
              <% } %>

              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="form-control"
                  required
                  value="<%= employee ? employee.name : "" %>"
                />
              </div>

              <div class="mb-3">
                <label for="salary" class="form-label">Salary</label>
                <input
                  type="number"
                  id="salary"
                  name="salary"
                  class="form-control"
                  required
                  value="<%= employee ? employee.salary : "" %>"
                />
              </div>

              <button type="submit" class="btn btn-primary w-100">
                <%= employee ? "Update" : "Submit" %>
              </button>

              <% if (employee) { %>
                <a href="/" class="btn btn-secondary w-100 mt-2">Cancel</a>
              <% } %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <footer class="bg-light text-center py-3 mt-5">
    <small>&copy; 2025 Your Company Name</small>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
